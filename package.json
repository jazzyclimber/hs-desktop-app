{
   "name": "hubpsot-copilot",
   "version": "0.1.5",
   "private": false,
   "repository": "https://github.com/jazzyclimber/hs-desktop-app",
   "description": "Assist HubSpot developers in module creation while developing on local machines",
   "author": "BJ Szyjakowski",
   "scripts": {
      "serve": "vue-cli-service serve",
      "build": "vue-cli-service build",
      "lint": "vue-cli-service lint",
      "electron:build": "vue-cli-service electron:build -p always",
      "electron:publish": "npm run electron:build -- --win nsis --mac",
      "electron:serve": "vue-cli-service electron:serve",
      "release": "electron-builder",
      "postinstall": "electron-builder install-app-deps",
      "postuninstall": "electron-builder install-app-deps"
   },
   "main": "background.js",
   "dependencies": {
      "core-js": "^3.6.5",
      "directory-tree": "^3.0.1",
      "dotenv": "^16.0.2",
      "electron-notarize": "^1.2.1",
      "electron-squirrel-startup": "^1.0.0",
      "electron-updater": "^5.2.1",
      "lodash": "^4.17.21",
      "v-jsoneditor": "^1.4.5",
      "vue": "^2.6.11",
      "vue-multipane": "^0.9.5",
      "vue-router": "^3.2.0",
      "vue-smooth-dnd": "^0.8.1",
      "vuedraggable": "^2.24.3",
      "vuex": "^3.4.0"
   },
   "devDependencies": {
      "@vue/cli-plugin-router": "~4.5.0",
      "@vue/cli-plugin-vuex": "~4.5.0",
      "@vue/cli-service": "~4.5.0",
      "autoprefixer": "^9.8.8",
      "electron": "^13.0.0",
      "electron-builder": "^23.3.3",
      "electron-devtools-installer": "^3.1.0",
      "postcss": "^7.0.39",
      "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.2.17",
      "vue-cli-plugin-electron-builder": "~2.1.1",
      "vue-cli-plugin-tailwind": "~3.0.0",
      "vue-template-compiler": "^2.6.14"
   },
   "vue": {
      "css": {
         "extract": false
      },
      "pluginOptions": {
         "electronBuilder": {
            "build": {
               "afterSign": "scripts/notarize.js"
            },
            "builderOptions": {
               "productName": "HubSpot Copilot",
               "publish": ["github"],
               "dmg": {
                  "sign": false
               },
               "mac": {
                  "hardenedRuntime": true,
                  "gatekeeperAssess": false,
                  "entitlements": "dist_electron/entitlements.mac.plist",
                  "entitlementsInherit": "dist_electron/entitlements.mac.plist"
               }
            }
         }
      }
   }
}